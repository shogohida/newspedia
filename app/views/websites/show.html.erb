<div class="d-flex justify-content-center">
  <%= image_tag @website.image, alt: "alttext" %>
</div>
<div class="container">
  <% if @website.name == "The New York Times" %>
    <div class="d-flex justify-content-center my-3">
      <%= simple_form_for @website do |f| %>
        <%= f.input :keyword %>
        <%= f.submit "Search articles" %>
      <% end %>
    </div>
    <h4>Introduction of  <%= @website.name %></h4>
    <div class="d-flex justify-content-center">
      <p><%= @website.description %></p>
    </div>
  <% elsif @website.name == "Wikipedia" %>
    <div class="d-flex justify-content-center my-3">
      <%= simple_form_for @website do |f| %>
        <%= f.input :keyword %>
        <%= f.submit "Search an article" %>
      <% end %>
    </div>
    <h4>Introduction of  <%= @website.name %></h4>
    <div class="d-flex justify-content-center">
      <p><%= @website.description %></p>
    </div>
  <% elsif @website.name == "News API" %>
    <div class="d-flex justify-content-center my-3">
      <%= simple_form_for @website do |f| %>
        <%= f.select :keyword, options_for_select(["Japan", "United States", "Russia", "South Korea", "India", "United Kingdom", "France", "Germany", "Brazil", "Mexico", "Australia", "UAE", "Nigeria", "Canada", "Poland", "Philippines", "Malaysia", "Turkey", "Ukraine"]) %>
        <%= f.submit "Search articles" %>
      <% end %>
    </div>
    <h4>Introduction of  <%= @website.name %></h4>
    <div class="d-flex justify-content-center">
      <p><%= @website.description %></p>
    </div>
