<% if current_user.already_liked?(@article) %>
  <%= button_to 'Unlike', article_like_path(@article), class: "btn btn-outline-primary mx-2", method: :delete, remote: true  %>
<% else %>
  <%= button_to 'Like', article_likes_path(@article), class: "btn btn-outline-primary mx-2", remote: true %>
<% end %>