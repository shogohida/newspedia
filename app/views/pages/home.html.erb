<%#= simple_form_for @website do |f| %>
  <%#= f.input :name, as: :select, collection: ["The New York Times", "Financial Times", "News API", "Wikipedia"] %>
  <%# end %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
    <div class="container">
      <h1><strong>Newspedia</strong></h1>
      <p>Collect articles from different news sources and create your favourite article list!</p>
      <!--       <a class="btn btn-flat" href="#">Apply now</a> -->
    </div>
  </div>
  <h2>Select a website</h2>
  <% @websites.each do |website| %>
    <div class="flexbox justify-content-around mt-5">
      <% if website.name == "The New York Times" %>
        <div class="card-homepage mr-3">
          <%= image_tag "new-york-times.svg", alt: "alttext" %>
          <!-- <img src="new-york-times.svg" alt="new york times"> -->
          <!--       <img src="https://res.cloudinary.com/dwd42pppi/image/upload/v1589945174/meet_locals_krzfen.jpg" > -->
          <div class="card-homepage-infos">
            <div>
              <h2 class="salmon-text"><%= website.name %></h2>
              <%= link_to "Search articles by keyword", website_path(website) %>
            </div>
          </div>
        </div>
      <% elsif website.name == "Financial Times" %>
        <div class="card-homepage mr-3">
          <%= image_tag "new-york-times.svg", alt: "alttext" %>
          <!-- <img src="new-york-times.svg" alt="new york times"> -->
          <!--       <img src="https://res.cloudinary.com/dwd42pppi/image/upload/v1589945174/meet_locals_krzfen.jpg" > -->
          <div class="card-homepage-infos">
            <div>
              <h2 class="salmon-text"><%= website.name %></h2>
              <%= link_to "Search latest articles", website_path(website) %>
            </div>
          </div>
        </div>
      <% elsif website.name == "News API" %>
        <div class="card-homepage mr-3">
          <%= image_tag "Screenshot from 2020-06-29 18-12-32.png", alt: "alttext" %>
          <!-- <img src="new-york-times.svg" alt="new york times"> -->
          <!--       <img src="https://res.cloudinary.com/dwd42pppi/image/upload/v1589945174/meet_locals_krzfen.jpg" > -->
          <div class="card-homepage-infos">
            <div>
              <h2 class="salmon-text"><%= website.name %></h2>
              <%= link_to "Search articles by country", website_path(website) %>
            </div>
          </div>
        </div>
      <% elsif website.name == "Wikipedia" %>
        <div class="card-homepage mr-3">
          <%= image_tag "wikipedia.svg", alt: "alttext" %>
          <!-- <img src="new-york-times.svg" alt="new york times"> -->
          <!--       <img src="https://res.cloudinary.com/dwd42pppi/image/upload/v1589945174/meet_locals_krzfen.jpg" > -->
          <div class="card-homepage-infos">
            <div>
              <h2 class="salmon-text"><%= website.name %></h2>
              <%= link_to "Search page by name", website_path(website) %>
            </div>
          </div>
        </div>
      <% elsif website.name == "COVID-19 Data" %>
        <div class="card-homepage mr-3">
          <%= image_tag "Screenshot from 2020-06-29 18-18-36", alt: "alttext" %>
          <!-- <img src="new-york-times.svg" alt="new york times"> -->
          <!--       <img src="https://res.cloudinary.com/dwd42pppi/image/upload/v1589945174/meet_locals_krzfen.jpg" > -->
          <div class="card-homepage-infos">
            <div>
              <h2 class="salmon-text"><%= website.name %></h2>
              <%= link_to "Search COVID-19 data by country", website_path(website) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
