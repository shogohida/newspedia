<h1>投稿詳細ページ</h1>
<h3><%#= @article.user.email %></h3>
<h5><%= @article.content %></h5>
<h5><%= link_to "check this article", @article.url, target: :_blank %></h5>
<h3>いいね件数: <%= @article.likes.count %></h3>
<% if current_user.already_liked?(@article) %>
  <%= button_to 'いいねを取り消す', article_like_path(@article), method: :delete %>
<% else %>
  <%= button_to 'いいね', article_likes_path(@article) %>
<% end %>
<h2>いいねしたユーザー</h2>
<% @article.like_users.each do |user| %>
  <li><%= user.name %></li>
<% end %>

<%= link_to "ホームへ戻る", articles_path %>
