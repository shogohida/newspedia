<div class="container d-flex justify-content-center mt-5">
  <div class="row">
    <div class="col-xs-12">
      <div class="simple-form">
        <h2>Edit your profile</h2>
          <%= simple_form_for(@user) do |f| %>
            <div class="form-inputs">
              <%= f.input :name %>
              <%= f.input :email %>
              <%= f.input :photo, as: :file %>
              <%= f.submit value: "Edit profile"%>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
